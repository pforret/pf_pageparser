{
    "name": "pforret/pf_pageparser",
    "description": "Simple Regex Page Parser in PHP",
    "keywords": [
        "pforret",
        "parser",
        "html",
        "web",
        "pf_pageparser"
    ],
    "homepage": "https://github.com/pforret/pf_pageparser",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "peter@forret.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Pforret\\PfPageparser\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pforret\\PfPageparser\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit --testdox",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "version": "2.0.0"
}
